@page
@model Pitch.Pages.PerfilModel
@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Cabeçalho do Perfil (SEM FOTO) -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h2 class="mt-1 mb-0">@Model.Usuario.UserName</h2>
                    <p class="text-muted mb-0">@Model.Usuario.Email</p>

                    @if (Model.EhColaborador)
                    {
                        <span class="badge bg-warning text-dark mt-2">
                            <i class="fas fa-star me-1"></i> Colaborador
                        </span>
                    }
                </div>
            </div>

            <!-- Informações pessoais -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informações Pessoais</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-envelope me-2"></i>E-mail:</strong> @Model.Usuario.Email</p>
                            <p>
                                <strong><i class="fas fa-phone me-2"></i>Telefone:</strong>
                                @(string.IsNullOrEmpty(Model.Usuario.PhoneNumber) ? "Não informado" : Model.Usuario.PhoneNumber)
                            </p>
                        </div>
                        <div class="col-md-6">
                            @if (Model.EhColaborador)
                            {
                                <p>
                                    <strong><i class="fas fa-briefcase me-2"></i>Especialidade:</strong>
                                    @Model.Usuario.Especialidade
                                </p>
                                <p>
                                    <strong><i class="fas fa-file-alt me-2"></i>Sobre:</strong>
                                    @Model.Usuario.Descricao
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ações -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                <a asp-page="/Account/Manage/Index" class="btn btn-outline-primary">
                    <i class="fas fa-user-edit me-2"></i>Editar Perfil
                </a>

                @if (!Model.EhColaborador)
                {
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalColaborador">
                        <i class="fas fa-user-tie me-2"></i>Tornar-se Colaborador
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal para virar Colaborador (inalterado) -->
@if (!Model.EhColaborador)
{
    <div class="modal fade" id="modalColaborador" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cadastro como Colaborador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-page-handler="TornarColaborador">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Especialidade Principal</label>
                            <input type="text" class="form-control" name="especialidade" required
                                   placeholder="Ex: Fotógrafo, DJ, Buffet...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descrição Profissional</label>
                            <textarea class="form-control" name="descricao" rows="4" required
                                  placeholder="Fale sobre sua experiência e serviços oferecidos"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Confirmar Cadastro</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Validação do formulário de colaborador
        const form = document.querySelector('#modalColaborador form');
        if (form) {
            form.addEventListener('submit', function (e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    this.classList.add('was-validated');
                }
            });
        }
    </script>
}
