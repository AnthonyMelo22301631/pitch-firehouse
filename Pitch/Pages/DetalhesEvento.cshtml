@page "{id:int}"
@model Pitch.Pages.Eventos.DetalhesEventoModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Detalhes do Evento";
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<link rel="stylesheet" href="~/css/meus-eventos.css" />

<style>
    /* Estilo só deste arquivo para harmonizar com seu dark theme */
    .comments-card {
        background: #121212; /* fundo do card de comentários */
        color: #eaeaea;
        border: 1px solid #222;
    }
    .comments-card .list-group-item {
        background: #151515; /* itens da lista */
        color: #eaeaea;
        border-color: #222;
    }
    .comments-card .list-group-item + .list-group-item {
        border-top-color: #242424;
    }
    .comments-card .form-control {
        background: #101010;
        color: #eaeaea;
        border-color: #2a2a2a;
    }
    .comments-card .form-control::placeholder {
        color: #9aa0a6;
    }
    .comments-card .input-group .btn {
        border-color: #2a2a2a;
    }
    .comments-card .small.text-muted {
        color: #9aa0a6 !important;
    }
</style>

<div class="meus-eventos-wrapper container">
    <div class="header-row d-flex align-items-center justify-content-between">
        <h1 class="titulo">🗓️ Detalhes do Evento</h1>
        <a asp-page="/Eventos" class="btn btn-outline-light">← Voltar para Eventos</a>
    </div>

    <div class="evento-card card shadow hover-up mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center gap-2">
                <div class="chip">@Model.EventoAtual.TipoFesta</div>
                @if (Model.EventoAtual.Cancelado)
                {
                    <span class="badge bg-warning text-dark">cancelado</span>
                }
            </div>

            <h3 class="card-title mt-2">@Model.EventoAtual.TipoLugar</h3>

            <div class="linhas">
                <div class="linha">
                    <span class="label">Data</span>
                    <span class="valor">@Model.EventoAtual.DataEvento.ToString("dd/MM/yyyy")</span>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.EventoAtual.Servicos))
                {
                    <div class="linha">
                        <span class="label">Serviços</span>
                        <span class="valor">@Model.EventoAtual.Servicos</span>
                    </div>
                }

                <div class="linha">
                    <span class="label">Criado por</span>
                    <span class="valor">@Model.EventoAtual.Criador?.UserName</span>
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                @if ((User.Identity?.IsAuthenticated ?? false) && Model.EventoAtual.UserId == currentUserId)
                {
                    <a asp-page="/EditarEvento" asp-route-id="@Model.EventoAtual.Id"
                       class="btn btn-sm btn-warning @(Model.EventoAtual.Cancelado ? "disabled" : "")"
                       aria-disabled="@(Model.EventoAtual.Cancelado ? "true" : "false")">
                        Editar
                    </a>

                    <form method="post" asp-page="/CancelarEvento" asp-route-id="@Model.EventoAtual.Id" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Tem certeza que deseja cancelar este evento?')"
                                @(Model.EventoAtual.Cancelado ? "disabled" : null)>
                            Cancelar
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

    <!-- Comentários -->
    <div class="card shadow comments-card">
        <div class="card-body">
            <h4 class="mb-3">Comentários</h4>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form method="post" asp-page-handler="Comentar" asp-route-id="@Model.EventoAtual.Id" class="mb-3">
                    <div class="input-group">
                        <input name="texto" class="form-control" placeholder="Escreva seu comentário..." />
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-info mb-3">Entre na sua conta para comentar.</div>
            }

            @if (Model.Comentarios is not null && Model.Comentarios.Count > 0)
            {
                <ul class="list-group list-group-flush">
                    @foreach (var c in Model.Comentarios)
                    {
                        <li class="list-group-item">
                            <div class="small text-muted">
                                <strong>@(c.Usuario?.UserName ?? "Usuário")</strong> • @c.CriadoEm.ToLocalTime().ToString("g")
                            </div>
                            <div>@c.Texto</div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="text-muted">Nenhum comentário ainda. Seja o primeiro a comentar!</div>
            }
        </div>
    </div>
</div>
